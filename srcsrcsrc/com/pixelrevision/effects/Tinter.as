package com.pixelrevision.effects{			import flash.geom.ColorTransform;		/**	 * @class Tinter	 * @description Tints a source object based on RGB values.	 * @author pixelrevision	 * @version 1.0	 * 	 */	public class Tinter{				private var _target:Object;		private var _targetColor:ColorTransform = new ColorTransform;		private var _red:Number = 0;		private var _green:Number = 0;		private var _blue:Number = 0;		private var _amount:Number = 0;				/**	 	 * Creates the Tinter.		 * @param	source	The object to tint.		 */		public function Tinter(source:Object){			_target = source;		}				/**		 * The amount of red (0-255).		 */		public function get red():Number {			return this._red;		}		public function set red(value:Number):void{			this._red = value;			updateColor();		}				/**	 	 * The amount of green (0-255).		 */		public function get green():Number {			return this._green;		}		public function set green(value:Number):void{			this._green = value;			updateColor();		}				/**		 * The amount of blue (0-255).		 */		public function get blue():Number {			return this._blue;		}		public function set blue(value:Number):void{			this._blue = value;			updateColor();		}				/**		 * The amount of color to apply (0-100).		 */		public function get amount():Number {			return _amount;		}		public function set amount(value:Number):void{			_amount = value;			updateColor();		}				private function updateColor():void{			// update with internal values			colorize(_red, _green, _blue, _amount);		}						/**		 * Colorizes the target clip.		 * @param	r	The amount of red (0-255).		 * @param	g	The amount of green (0-255).		 * @param	b	The amount of blue (0-255).		 * @param	amount	The amount of color to apply (0-100).		 */		public function colorize(r:Number, g:Number, b:Number, amount:Number):void{			// create the color			var percent:Number = (100 - amount)/100;			_targetColor.redMultiplier = percent;			_targetColor.greenMultiplier = percent;			_targetColor.blueMultiplier = percent;			var ratio:Number = amount / 100;			_targetColor.redOffset= r * ratio;			_targetColor.greenOffset = g * ratio;			_targetColor.blueOffset = b * ratio;			// apply			_target.transform.colorTransform = _targetColor;			// update values			_red = r;			_green = g;			_blue = b;			_amount = amount;		}							}}