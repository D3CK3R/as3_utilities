package com.pixelrevision.tiler {		import flash.display.DisplayObject;	import flash.display.Sprite;		public class Tile{				protected var _walkable:Boolean;		protected var _content:Sprite;				protected var _tileWidth:Number;		protected var _tileHeight:Number;				/**		 * The id for the map to reference			 */			public var id:int;					/**		 *	@constructor		 */		public function Tile(tileWidth:Number, tileHeight:Number){			super();			id = 0;						_tileWidth = tileWidth;			_tileHeight = tileHeight;						_content = new Sprite();			_content.graphics.beginFill(0xCCCCCC);			_content.graphics.lineStyle(1, 0x999999);			_content.graphics.drawRect(0, 0, _tileWidth, _tileHeight);			_content.graphics.endFill();		}						// -------------------------------------------------------------------------------------------------- TILE SETTINGS		/**		 * If the tile can be walked on			 */			public function set walkable(value:Boolean):void{			_walkable = value;		}		public function get walkable():Boolean{			return _walkable;		}				/**		 * The content sprite.		 */		public function get content():Sprite{			return _content;		}			}	}