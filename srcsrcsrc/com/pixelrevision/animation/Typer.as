package com.pixelrevision.animation{		import flash.events.TimerEvent;	import flash.text.TextField;	import flash.utils.Timer;		public class Typer{			private var _field:TextField;		private var _timer:Timer;		private var _mainString:String;		private var _index:uint;			/**		 * Simple class to type text into text fields.		 * @param	textField	the text field to type to		 * @param	textToType	The string to type.  Optional if left "" will not type.		 * @param	howFast	The rate in second to wait between each letter.  Optional if left 0 will not type.		 */		public function Typer(textField:TextField, textToType:String = "", howFast:Number = 0){			_index = 0;			_field = textField;			_mainString = "";			_timer = new Timer(0);			_timer.addEventListener("timer", typeText);						if(textToType != "" && howFast != 0){				type(textToType, howFast);			}					}			/**		 * Starts typing in some text		 * @param	textToType	The string to type.		 * @param	howFast	The rate in second to wait between each letter.		 */		public function type(textToType:String, howFast:Number):void{			_mainString += textToType;			_timer.delay = howFast * 1000;			_timer.repeatCount = textToType.length - _index;			_timer.start();		}			private function typeText(e:TimerEvent):void{			_field.appendText( _mainString.substr(_index, 1) );			_index += 1;			if(_index == _mainString.length){				_timer.removeEventListener("timer", typeText);			}		}	}	}