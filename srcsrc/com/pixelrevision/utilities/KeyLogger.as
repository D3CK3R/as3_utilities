package com.pixelrevision.utilities {		import flash.display.Stage;	import flash.events.Event;	import flash.events.EventDispatcher;	import flash.events.KeyboardEvent;		/**	 * @class KeyLogger	 * @description Simple way to get notifications of keys being pressed.	 * @author pixelrevision	 * @version 1.0	 * 	 */		public class KeyLogger extends EventDispatcher{				protected var _keyArray:Array;		/**		 *	@constructor		 */			public function KeyLogger(stage:Stage){			_keyArray = new Array();			stage.addEventListener(KeyboardEvent.KEY_DOWN, checkKeysDown);			stage.addEventListener(KeyboardEvent.KEY_UP, checkKeysUp);		}				protected function checkKeysDown(e:KeyboardEvent):void{			if( !_keyArray[e.keyCode] ){				_keyArray[e.keyCode] = true;				dispatchEvent(e);			}		}				protected function checkKeysUp(e:KeyboardEvent):void{			_keyArray[e.keyCode] = false;		}				/**		 *	Checks if a specified key is down.		 */		public function isDown(value:uint):Boolean{			if(_keyArray[value]){				return true;			}			return false;		}			}	}